{
  "name": "webrtc-chat",
  "version": "1.0.0",
  "description": "A peer-to-peer chat application using WebRTC for direct browser-to-browser communication",
  "private": false,
  "type": "module",
  "license": "MIT",
  "author": "deckyfx",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/deckyfx/webrtc-chat.git"
  },
  "bugs": {
    "url": "https://github.com/deckyfx/webrtc-chat/issues"
  },
  "homepage": "https://deckyfx.github.io/webrtc-chat",
  "keywords": [
    "webrtc",
    "p2p",
    "chat",
    "peer-to-peer",
    "react",
    "bun",
    "typescript"
  ],
  "scripts": {
    "dev": "bun --hot src/index.tsx",
    "start": "NODE_ENV=production bun src/index.tsx",
    "build": "bun run build.ts",
    "build:gh-pages": "bun run build.ts --outdir=dist --public-path=/webrtc-chat/",
    "preview": "bunx serve dist",
    "deploy": "bun run build:gh-pages && bunx gh-pages -d dist"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.13",
    "bun-plugin-tailwind": "^0.0.15",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.525.0",
    "react": "^19",
    "react-dom": "^19",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.11",
    "tailwindcss-animate": "^1.0.7",
    "trystero": "^0.21.8",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/bun": "latest"
  }
}
